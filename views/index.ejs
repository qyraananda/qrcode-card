<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>

    <link rel='stylesheet' href='/stylesheets/style-card.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <section class="vh-100" style="background-color: #f4f5f7;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-6 mb-4 mb-lg-0">
                    <div class="card mb-3 shadow-lg p-0 mb-5" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <%if(data.length>0){%>
                                <% data.forEach((rows,index)=>{%>
                                    <div class="col-md-4 gradient-custom text-center text-white" style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                        <img src="../images/egogo white 1.png" alt="Avatar" class="img-fluid my-5" style="width: 100px;" />
                                        <h5 class="text-black"><strong><%=rows.name%></strong></h5>
                                        <p class="text-black">
                                            <%=rows.job%>
                                        </p>
                                        <p class="card-text text-black">PT. Egogo Hub Indonesia</p>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body p-4">
                                            <h6>Information</h6>
                                            <hr class="mt-0 mb-4">
                                            <div class="row pt-1">
                                                <div class="col-6 mb-3">
                                                    <h6>Email</h6>
                                                    <p class="text-muted">
                                                        <%=rows.job%>
                                                    </p>
                                                </div>
                                                <div class="col-6 mb-3">
                                                    <h6>Phone</h6>
                                                    <p class="text-muted">
                                                        <%=rows.user_mobile%>
                                                    </p>
                                                </div>
                                            </div>
                                            <h6>Address</h6>
                                            <hr class="mt-0 mb-4">
                                            <div class="row pt-1">
                                                <div class="col-6 mb-3">
                                                    <h6>WEB</h6>
                                                    <p class="text-muted">https://egogohub.com</p>
                                                </div>
                                                <div class="col-6 mb-3">
                                                    <h6>Office</h6>
                                                    <p class="text-muted">Pantai Indah Selatan Ruko Elang Laut Boulevard Blok F No.1-2<br>Pantai Indah Kapuk<br>Jakarta Utara 14470<br>DKI Jakarta<br>Indonesia</p>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-start">

                                            </div>
                                        </div>
                                    </div>
                                    <%})}%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>